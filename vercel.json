{
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/registrations",
      "dest": "/api/registrations.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/sync",
      "dest": "/api/sync.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "SHEET_SYNC_KEY": "@sheet_sync_key"
  }
}
